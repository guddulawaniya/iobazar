<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,MissingConstraints"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/layout"
          android:padding="3dp"
          android:orientation="vertical">

          <ImageView
              android:id="@+id/item_profile_img"
              android:layout_width="100dp"
              android:layout_height="90dp"
              android:layout_marginBottom="10dp"
              android:background="#dddddd"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="ContentDescription,MissingConstraints" />
          <TextView
              android:id="@+id/item_student_description"
              android:layout_width="100dp"
              android:layout_height="15dp"
              android:background="#dddddd"
              tools:ignore="MissingConstraints" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/layout1"
          android:padding="3dp"
          android:orientation="vertical">

          <ImageView
              android:id="@+id/item_profile_img1"
              android:layout_width="100dp"
              android:layout_height="90dp"
              android:layout_marginBottom="10dp"
              android:background="#dddddd"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="ContentDescription,MissingConstraints" />
          <TextView
              android:id="@+id/item_student_description1"
              android:layout_width="100dp"
              android:layout_height="15dp"
              android:background="#dddddd"
              tools:ignore="MissingConstraints" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/layout2"
          android:padding="3dp"
          android:orientation="vertical">

          <ImageView
              android:id="@+id/item_profile_img2"
              android:layout_width="100dp"
              android:layout_height="90dp"
              android:layout_marginBottom="10dp"
              android:background="#dddddd"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="ContentDescription,MissingConstraints" />
          <TextView
              android:id="@+id/item_student_description2"
              android:layout_width="100dp"
              android:layout_height="15dp"
              android:background="#dddddd"
              tools:ignore="MissingConstraints"
               />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/layout3"
          android:padding="3dp"
          android:orientation="vertical">

          <ImageView
              android:id="@+id/item_profile_img3"
              android:layout_width="100dp"
              android:layout_height="90dp"
              android:layout_marginBottom="10dp"
              android:background="#dddddd"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="ContentDescription,MissingConstraints" />
          <TextView
              android:id="@+id/item_student_description3"
              android:layout_width="100dp"
              android:layout_height="15dp"
              android:background="#dddddd"
              tools:ignore="MissingConstraints"
               />
      </LinearLayout>
  </LinearLayout>




</RelativeLayout>
